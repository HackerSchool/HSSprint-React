{
    "type": "Categorization",
    "elements" : [
        {
            "type": "Category",
            "label": "Initial Information",
            "elements": [
                {
                    "type": "Control",
                    "scope": "#/properties/name",
                    "label": "Project Name"
                },
                {
                    "type": "Control",
                    "scope": "#/properties/description",
                    "options": {
                        "multi": true
                    }
                },
                {
                    "type":"Group",
                    "label": "Members",
                    "elements":[
                        {
                            "type":"Control",
                            "scope": "#/properties/members",
                            "label": "Choose your members here! By default, the first member is considered the project manager"
                        }
                    ]
                },
                {
                    "type": "Control",
                    "scope": "#/properties/etc",
                    "label": "Estimate Time of Completion (ETC)"
                }
            ]
        },
        {
            "type":"Category",
            "label": "Tasks",
            "rule": {
                "effect": "HIDE",
                "condition": {
                    "scope": "#/properties/etc",
                    "schema": {
                        "const": ""
                    }
                }
            },
            "elements": [
                {
                    "type":"Control",
                    "scope": "#/properties/tasks",
                    "options": {
                        "elementLabelProp": "name_task",
                        "detail": {
                            "type": "VerticalLayout",
                            "elements": [
                                {
                                    "type": "HorizontalLayout",
                                    "elements": [
                                        {
                                            "type": "Control",
                                            "scope": "#/properties/name_task"
                                        },
                                        {
                                            "type": "Control",
                                            "scope": "#/properties/status"
                                        }
                                    ]
                                },
                                {
                                    "type": "HorizontalLayout",
                                    "elements": [
                                        {
                                            "type": "Control",
                                            "scope": "#/properties/assignee"
                                        },
                                        {
                                            "type": "Control",
                                            "scope": "#/properties/sub_tasks",
                                            "rule": {
                                                "effect": "HIDE",
                                                "condition": {
                                                    "scope": "#/properties/status",
                                                    "schema": {
                                                        "const": "DONE"
                                                    }
                                                }
                                            }
                                        },
                                        {
                                            "type": "Control",
                                            "scope": "#/properties/problems",
                                            "rule": {
                                                "effect": "HIDE",
                                                "condition": {
                                                    "scope": "#/properties/status",
                                                    "schema": {
                                                        "const": "DONE"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "options": {
        "variant": "stepper",
        "showNavButtons": true
    }
}